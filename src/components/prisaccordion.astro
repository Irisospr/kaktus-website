---
const sections = [
  {
    title: "KLIP",
    rows: [
      { name: "Klip – Small", price: "440,00 DKK" },
      { name: "Klip – Medium", price: "540,00 DKK" },
      { name: "Klip – Large", price: "650,00 DKK" },
      { name: "Klip/børn 0-5 år", price: "350,00 DKK" },
      { name: "Klip/børn 6-12 år (small)", price: "390,00 DKK" },
      { name: "Klip/børn m. vask/føn (medium)", price: "490,00 DKK" },
      { name: "Vask og føn", price: "440,00 DKK" },
      { name: "Klip af pandehår", price: "195,00 DKK" },
    ],
  },
  {
    title: "HÅRKUR/TREATMENT",
    rows: [
      { name: "K-18 – Molekylær uden klip (45 min)", price: "490,00 DKK" },
      { name: "Hårkur/treatment", price: "500,00 DKK" },
    ],
  },
  {
    title: "STRIBER – BALAYAGE – BABYLIGHTS",
    rows: [
      { name: "Striber small (120 min)", price: "1090,00 DKK" },
      { name: "Striber medium (120 min)", price: "1290,00 DKK" },
      { name: "Striber large (120 min)", price: "1490,00 DKK" },
      { name: "Striber x-large (120 min)", price: "1890,00 DKK" },
      { name: "Balayage small (120 min)", price: "2000,00 DKK" },
      { name: "Balayage medium (120 min)", price: "2300,00 DKK" },
      { name: "Balayage large (120 min)", price: "2500,00 DKK" },
    ],
  },
  {
    title: "TONER",
    rows: [
      { name: "Toner small (90 min)", price: "790,00 DKK" },
      { name: "Toner medium (90 min)", price: "890,00 DKK" },
      { name: "Toner large (90 min)", price: "990,00 DKK" },
      { name: "Toner x-large (90 min)", price: "1190,00 DKK" },
    ],
  },
  {
    title: "TONER SOM TILLÆG (KUN TIL BOOKING MED STRIBER)",
    rows: [{ name: "Toner som tillæg (30 min)", price: "450,00 DKK" }],
  },
  {
    title: "FARVER",
    rows: [
      { name: "Farvning small (90 min)", price: "890,00 DKK" },
      { name: "Farvning medium (105 min)", price: "1090,00 DKK" },
      { name: "Farvning large (120 min)", price: "1290,00 DKK" },
      { name: "Farvning x-large (120 min)", price: "1490,00 DKK" },
      { name: "Afpigmentering toner small (150 min)", price: "1200,00 DKK" },
      { name: "Afpigmentering toner medium (150 min)", price: "1400,00 DKK" },
      { name: "Afpigmentering toner large (45 min)", price: "1700,00 DKK" },
    ],
  },
  {
    title: "FARVE/BRYN OG VIPPER",
    rows: [
      { name: "Farve/bryn og vipper (30 min)", price: "390,00 DKK" },
      { name: "Farve bryn (15 min)", price: "195,00 DKK" },
      { name: "Farve vipper (15 min)", price: "195,00 DKK" },
    ],
  },
  {
    title: "STYLING/BRYLLUP OG FEST",
    rows: [
      { name: "Styling (60 min)", price: "800,00 DKK" },
      { name: "Bryllup og fest (175 min)", price: "1600,00 DKK" },
    ],
  },
  {
    title: "PERMANENT",
    rows: [
      { name: "Permanent/top (103 min)", price: "790,00 DKK" },
      { name: "Permanent small (120 min)", price: "1190,00 DKK" },
      { name: "Permanent medium (150 min)", price: "1390,00 DKK" },
      { name: "Permanent large (150 min)", price: "1590,00 DKK" },
      { name: "Permanent x-large (180 min)", price: "1790,00 DKK" },
    ],
  },
];
---

<div class="price-accordion" data-accordion>
  {sections.map((s) => (
    <details class="acc-item">
      <summary class="acc-summary">
        <span class="acc-title">{s.title}</span>
        <span class="acc-icon" aria-hidden="true"></span>
      </summary>

      <div class="acc-panel">
        <ul class="acc-list">
          {s.rows.map((r) => (
            <li class="acc-row">
              <span class="acc-name">{r.name}</span>
              <span class="acc-price">{r.price}</span>
            </li>
          ))}
        </ul>
      </div>
    </details>
  ))}
</div>

<script is:inline>
  document.querySelectorAll("[data-accordion]").forEach((root) => {
    root.addEventListener(
      "toggle",
      (e) => {
        if (!(e.target instanceof HTMLDetailsElement)) return;
        if (!e.target.open) return;

        root.querySelectorAll("details").forEach((d) => {
          if (d !== e.target) d.open = false;
        });
      },
      true
    );
  });
</script>

<style>
  /* OUTER BOX (brown) */
  .price-accordion {
    width: min(720px, 92vw);
    margin: 40px auto;
    background: #d6c0b3;
    border: 2px solid rgba(255, 255, 255, 0.65);
    padding: 28px 24px;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.06);
  }

  .acc-item {
    border-top: 1px solid rgba(0, 0, 0, 0.35);
    padding: 0;
  }
  .acc-item:last-child {
    border-bottom: 1px solid rgba(0, 0, 0, 0.35);
  }

  summary::-webkit-details-marker { display: none; }
  summary { list-style: none; }

  .acc-summary {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 18px 10px;
    cursor: pointer;
  }

  /* ✅ HEADER typography */
  .acc-title {
    font-family: "arboria", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 25px;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    line-height: 1.1;
  }

  /* Plus / minus */
  .acc-icon {
    width: 22px;
    height: 22px;
    position: relative;
    flex: 0 0 22px;
    opacity: 0.8;
  }
  .acc-icon::before,
  .acc-icon::after {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    width: 20px;
    height: 2px;
    background: rgba(0, 0, 0, 0.7);
    transform: translate(-50%, -50%);
  }
  .acc-icon::after {
    transform: translate(-50%, -50%) rotate(90deg);
  }
  details[open] .acc-icon::after { display: none; }

  /* PANEL WRAP */
  .acc-panel {
    padding: 0 10px 18px;
  }

  /* INNER LIST (cream) */
  .acc-list {
    margin: 0;
    padding: 0;
    list-style: none;
    background: #fbf4ec;
    border: 1px solid rgba(0, 0, 0, 0.12);
  }

  /* ✅ ROW typography (Montserrat 20px) */
  .acc-row {
    display: flex;
    justify-content: space-between;
    gap: 16px;
    padding: 16px 18px;

    font-family: "montserrat", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 20px;

    border-bottom: 1px solid #8fd2c9;
  }
  .acc-row:last-child { border-bottom: none; }

  .acc-name {
    opacity: 0.95;
    line-height: 1.25;
    /* makes long services wrap nicely instead of pushing price off */
    max-width: 70%;
  }

  .acc-price {
    white-space: nowrap;
    flex: 0 0 auto;
  }

  /* ✅ Mobile improvements: more space around, better readability */
  @media (max-width: 600px) {
    .price-accordion {
      width: min(720px, 92vw);
      margin: 22px auto;
      padding: 18px 14px;
      border-width: 2px;
    }

    .acc-summary {
      padding: 16px 8px;
    }

    .acc-title {
      font-size: 20px; /* still Arboria, just scaled down a bit for small screens */
      letter-spacing: 0.05em;
    }

    .acc-panel {
      padding: 0 8px 16px;
    }

    .acc-row {
      font-size: 16px; /* Montserrat, scaled down for mobile */
      padding: 14px 12px;
      gap: 12px;
    }

    .acc-name {
      max-width: 68%;
    }
  }

  /* Super small phones: keep price readable */
  @media (max-width: 360px) {
    .acc-title { font-size: 18px; }
    .acc-row { font-size: 15px; }
    .acc-name { max-width: 66%; }
  }
</style>

