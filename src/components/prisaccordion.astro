      { name: "Permanent x-large (180 min)", price: "1790,00 DKK" },
    ],
  },
];
---

<div class="price-accordion" data-accordion>
  {sections.map((s) => (
    <details class="acc-item">
      <summary class="acc-summary">
        <span class="acc-title">{s.title}</span>
        <span class="acc-icon" aria-hidden="true"></span>
      </summary>

      <div class="acc-panel">
        <ul class="acc-list">
          {s.rows.map((r) => (
            <li class="acc-row">
              <span class="acc-name">{r.name}</span>
              <span class="acc-price">{r.price}</span>
            </li>
          ))}
        </ul>
      </div>
    </details>
  ))}
</div>

<script>
  document.querySelectorAll('[data-accordion]').forEach((root) => {
    root.addEventListener(
      'toggle',
      (e) => {
        if (!(e.target instanceof HTMLDetailsElement)) return;
        if (!e.target.open) return;

        root.querySelectorAll('details').forEach((d) => {
          if (d !== e.target) d.open = false;
        });
      },
      true
    );
  });
</script>

<style>
  .price-accordion {
    width: min(520px, 92vw);
    margin: 0 auto;
    background: #d6c0b3;
    border: 1px solid rgba(0, 0, 0, 0.25);
    padding: 20px 18px;
  }

  .acc-item {
    border-top: 1px solid rgba(0, 0, 0, 0.35);
    padding: 0;
  }
  .acc-item:last-child {
    border-bottom: 1px solid rgba(0, 0, 0, 0.35);
  }

  summary::-webkit-details-marker {
    display: none;
  }
  summary {
    list-style: none;
  }

  .acc-summary {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14px 6px;
    cursor: pointer;
  }

  .acc-title {
    letter-spacing: 0.08em;
    text-transform: uppercase;
    font-size: 14px;
  }

  .acc-icon {
    width: 18px;
    height: 18px;
    position: relative;
    flex: 0 0 18px;
  }
  .acc-icon::before,
  .acc-icon::after {
    content: "";
    position: absolute;
    left: 50%;
    top: 50%;
    width: 16px;
    height: 1.5px;
    background: rgba(0, 0, 0, 0.7);
    transform: translate(-50%, -50%);
  }
  .acc-icon::after {
    transform: translate(-50%, -50%) rotate(90deg);
  }
  details[open] .acc-icon::after {
    display: none;
  }

  .acc-panel {
    padding: 0 6px 14px;
  }

  .acc-list {
    margin: 0;
    padding: 0;
    list-style: none;
    border-top: 1px solid rgba(0, 0, 0, 0.25);
  }

  .acc-row {
    display: flex;
    justify-content: space-between;
    gap: 16px;
    padding: 10px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.18);
    font-size: 13px;
  }

  .acc-name {
    opacity: 0.95;
  }
  .acc-price {
    white-space: nowrap;
  }

  @media (max-width: 480px) {
    .price-accordion {
      padding: 16px 14px;
    }
    .acc-title {
      font-size: 13px;
    }
    .acc-row {
      font-size: 12.5px;
    }
  }
</style>
